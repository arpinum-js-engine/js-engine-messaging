{
  "name": "@arpinum/messaging",
  "version": "4.0.0-1",
  "description": "Simple message bus",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "tslint": "tslint --fix 'lib/**/*.ts'",
    "jest": "jest",
    "testw": "jest --watch",
    "prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "compile": "tsc -p tsconfig.test.json",
    "test": "run-s -c compile jest tslint",
    "prebuild": "rm -rf ./build",
    "build": "tsc",
    "preversion": "run-s test build",
    "postversion": "git push && git push --tags && npm publish --tag alpha"
  },
  "author": "Arpinum",
  "license": "MIT",
  "repository": "arpinum-oss/js-messaging.git",
  "keywords": [
    "message",
    "bus",
    "event"
  ],
  "devDependencies": {
    "@types/jest": "23.1.0",
    "@types/sinon": "5.0.1",
    "jest": "23.1.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.13.5",
    "sinon": "6.0.0",
    "ts-jest": "22.4.6",
    "ts-node": "6.1.1",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "typescript": "2.9.2"
  },
  "dependencies": {
    "@arpinum/defender": "1.0.0",
    "@arpinum/promising": "2.2.2"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/lib/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ]
  }
}
